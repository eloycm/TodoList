@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Todo List</h1>
    <p class="lead">task management application</p>
    
</div>
@if (User.Identity != null &&  User.Identity.IsAuthenticated)
{
    <div>
        <div id="tcontainer">

            <table id="grid"></table>
            <div id="gridPager"></div>

        </div>

        <br />
        <a href="#" id="insertlink">Add new item</a>
        <br />
        <a href="#" id="deleteall">Delete all completed tasks</a>
        <br />
        <input type="checkbox" id="chkShowAll" checked />Show completed Items
        <br />
    </div>
}
<div id="todoModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <h4 class="modal-title"></h4>
            <div id='todoContainer' class="modal-body">
            </div>
        </div> 
    </div>    
</div>


